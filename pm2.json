{
  "apps": [
    {
      "name": "lifeops-backend",
      "cwd": "/root/lifeops-panel/backend",
      "interpreter": "/root/lifeops-panel/backend/venv/bin/python3",
      "script": "-m",
      "args": "uvicorn main:app --host 0.0.0.0 --port 8000",
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "max_memory_restart": "300M",
      "autorestart": true,
      "watch": false
    }
  ]
}
